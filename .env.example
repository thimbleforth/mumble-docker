# Environment variables for Mumble Docker container

# Timezone (default: UTC)
TZ=UTC

# Server Configuration
# Note: These can be overridden in mumble-server.ini

# Maximum number of users
MUMBLE_MAX_USERS=100

# Server password (leave empty for no password)
MUMBLE_SERVER_PASSWORD=

# Server name
MUMBLE_SERVER_NAME=Mumble Server

# Welcome message
MUMBLE_WELCOME_TEXT=Welcome to this Mumble server!

# Port (default: 64738)
MUMBLE_PORT=64738

# Maximum bandwidth per client (in bits per second)
MUMBLE_BANDWIDTH=72000

# Resource Limits
MUMBLE_CPU_LIMIT=2
MUMBLE_MEMORY_LIMIT=512M
MUMBLE_CPU_RESERVATION=0.5
MUMBLE_MEMORY_RESERVATION=128M
